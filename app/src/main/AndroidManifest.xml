<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.readit">

    <application
        android:name="Test"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Readit">
        <activity
            android:name=".MainActivity"
            android:label="readit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity android:name=".PostConfirmationActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".NotificationSettingsActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".ChooseHighSchoolActivity"/>
        <activity android:name=".CodeVerificationActivity" />
        <activity android:name=".DisplayNameActivity" />
        <activity android:name=".WelcomeActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".ViewPostActivity" />
    </application>

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>