<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4285F4"
    tools:context=".MainActivity">

    <!-- logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="275dp"
        android:layout_height="156dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/readit_logo" />

    <!-- sign up text-->
    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_sans"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true" />

    <!-- alt login text-->
    <TextView
        android:id="@+id/orLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_sans"
        android:text="@string/or_login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@id/signUpText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="onClick"/>

    <!-- Email background -->
    <ImageView
        android:id="@+id/email_bg"
        android:layout_width="322dp"
        android:layout_height="91dp"
        android:background="@drawable/rectangle_round_corners"
        android:layout_below="@id/orLoginText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- display name background -->
    <ImageView
        android:id="@+id/display_name_bg"
        android:layout_width="322dp"
        android:layout_height="91dp"
        android:background="@drawable/rectangle_round_corners"
        android:layout_below="@id/email_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Password background -->
    <ImageView
        android:id="@+id/password_bg"
        android:layout_width="322dp"
        android:layout_height="91dp"
        android:background="@drawable/rectangle_round_corners"
        android:layout_below="@id/display_name_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />



    <!-- email field -->
    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="288dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:layout_below="@id/orLoginText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- display name field -->
    <EditText
        android:id="@+id/editTextTextDisplayName"
        android:layout_width="288dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/display_name"
        android:inputType="text"
        android:layout_below="@id/email_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- password field -->
    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="288dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_below="@id/display_name_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- submit button -->
    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4285F4"
        android:layout_below="@id/password_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/login"
        android:onClick="submit"/>

</RelativeLayout>