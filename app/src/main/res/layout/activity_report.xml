<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity">

    <TextView
        android:id="@+id/reportTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text=" doesn't appear to be a high school"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/reportTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto_regular"
        android:text="if you want to submit it for review please click the report button below and we will manually review to ensure it is a high school."
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/reviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportTextView2"
        android:layout_marginTop="71dp"
        android:background="@drawable/rectangle_round_corners"
        android:layout_centerHorizontal="true"
        android:text="report"
        android:drawableLeft="@drawable/ic_baseline_send_24"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:letterSpacing="0"
        />

</RelativeLayout>